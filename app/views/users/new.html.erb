<div class="container">
	<div class="page-header">
	  <h1>Insert new User</h1>
	</div>
	<%= form_for @user, :html => {:class => "form-horizontal", :role => "form"} do |f| %>
		<div class="form-group">
			<%= f.label :name, "Name:", class: "col-sm-2 control-label" %>
			<div class="col-sm-5">
				<%= f.text_field :name, {:class => "form-control", :required => "required", :placeholder => "Insert your name .."} %>
			</div>
		</div>
		<div class="form-group">
			<%= f.label :email, "Email:", class: "col-sm-2 control-label" %>
			<div class="col-sm-5">
				<%= f.text_field :email, {:class => "form-control", :required => "required", :placeholder => "Insert your email .."} %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-10 col-sm-offset-2">
				<%= f.submit "Submit", class: "btn btn-default btn-primary" %> 
			</div>
		</div>
	<% end %>
</div>


