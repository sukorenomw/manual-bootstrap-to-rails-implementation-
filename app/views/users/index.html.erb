<div class="container">
	<div class="page-header">
	  <h1>Ruby on Rails<small> users App</small></h1>
	</div>
	<% if flash[:notice] %>
	<div class="alert alert-success">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
		<strong>Success!</strong> <%= flash[:notice] %>
	</div>
	<% end %>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>id</th>
				<th>name</th>
				<th>email</th>
				<th>address</th>
				<th>action</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= user.name %></td>
				<td><%= user.email %></td>
				<td><%= user.address %></td>
				<td>
					<button type="button" class="btn btn-xs btn-success">Edit</button>
					<button type="button" class="btn btn-xs btn-danger">Delete</button>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to "Add new user", {:controller => "users", :action => "new" }, :class => "btn btn-sm btn-primary" %>
</div>
